.zSlcWrap
    >input
        background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA8AAAAECAYAAABREWWJAAAAO0lEQVQIW2N0cnJKYGJims+ABfz//3/h3r17E7DJgcQYQQQ2AwhphGtGN4AYjSiaYQYwMjI64HMqshcAmTccBfwoZTYAAAAASUVORK5CYII=')100% center no-repeat 
        width 100%
        height 100%
        display block
        padding-right 20px
        cursor pointer
        text-overflow ellipsis
        border-radius 3px
        font-size 12px
        padding-left 5px
    >input[readonly]
        background-color #fff 
        border 1px solid #ddd
.zSlcBd
    padding 6px 10px
    &:before, &:after
        display block
        position absolute
        left 15px
        margin-left -6px
        top -6px
        content ''
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-bottom 6px solid #ddd
    &:after 
        left 15px
        margin-left -5px
        top -5px
        content ''
        border-left 5px solid transparent
        border-right 5px solid transparent
        border-bottom 5px solid #fff
    >.zFilter
        position absolute
        top 0
        left 0
        right 0
        background-color #fff
        z-index 3
        padding 5px
    >p
        margin 0
        line-height 28px
        position relative
        padding-left 10px
        padding-right 10px
        white-space nowrap
        color #333
        font-size 12px
        &:after 
            position absolute
            right 5px
            top 0
            content 'ã¸'
            // float right 
            transform rotateX(180deg)
            font-weight 700
            font-size 10px
            display none 
            color #888
    >p:not([disabled]):not([selected])
        &:hover
            background-color #f3f3f3
            cursor pointer
            &:after
                display block
    >p[disabled]
        opacity .5
        point-events none 
        cursor not-allowed
    >p[selected]
        color #0e90d2
        &:after 
            color #0e90d2
            display block
    >p[slcGroup]
        border-bottom 1px solid #ddd
.zSlcBd.zSlcHasFilter
    padding-top 40px
    
.zDropdownUp .zSlcBd
    &:before, &:after
        display none
        